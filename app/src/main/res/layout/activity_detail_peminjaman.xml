<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context="com.devjurnal.coworkingspacepemkot.DetailPeminjamanActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="detail peminjaman"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="No. HP"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Komunitas/Instansi"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvKomunitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Gedung"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvGedung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Ruangan"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvRuangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Agenda Acara"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...."
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:onClick="btnSendDetail"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kirim"/>

</LinearLayout>
